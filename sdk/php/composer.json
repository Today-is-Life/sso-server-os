{
    "name": "todayislife/sso-client",
    "description": "PHP SDK for SSO Server API - Enterprise Single Sign-On Client",
    "type": "library",
    "keywords": ["sso", "single-sign-on", "oauth", "oidc", "authentication", "laravel", "php"],
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Today is Life GmbH",
            "email": "info@todayislife.de",
            "homepage": "https://www.todayislife.de"
        },
        {
            "name": "Guido Mitschke",
            "email": "guido@todayislife.de"
        }
    ],
    "homepage": "https://github.com/todayislife/sso-client-php",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "psr/log": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.15",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "TodayIsLife\\SsoClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TodayIsLife\\SsoClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs src tests",
        "phpcbf": "phpcbf src tests",
        "php-cs-fixer": "php-cs-fixer fix",
        "quality": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}